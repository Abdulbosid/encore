<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Parallax Scroll View -->
    <declare-styleable name="ParallaxScroll">
        <attr name="parallax_factor" format="float" />
        <attr name="inner_parallax_factor" format="float" />
        <attr name="parallax_views_num" format="integer" />
        <attr name="circular_parallax" format="boolean" />
    </declare-styleable>

    <!-- Material Menu View -->
    <declare-styleable name="MaterialMenuView">
        <attr name="color" format="color"/>
        <attr name="scale" format="integer"/>
        <attr name="transformDuration" format="integer"/>
        <attr name="pressedDuration" format="integer"/>
    </declare-styleable>

    <!-- Two Way View -->
    <declare-styleable name="TwoWayView">
        <attr name="layoutManager" format="string"/>
    </declare-styleable>

    <declare-styleable name="TwoWayLayoutManager">
        <attr name="android:orientation"/>
    </declare-styleable>

    <declare-styleable name="GridLayoutManager">
        <attr name="numColumns" format="integer"/>
        <attr name="numRows" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SpacingItemDecoration">
        <attr name="android:verticalSpacing"/>
        <attr name="android:horizontalSpacing"/>
    </declare-styleable>

    <declare-styleable name="DividerItemDecoration">
        <attr name="android:divider"/>
    </declare-styleable>

    <declare-styleable name="StaggeredGridViewChild">
        <attr name="span" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SpannableGridViewChild">
        <attr name="colSpan" format="integer"/>
        <attr name="rowSpan" format="integer"/>
    </declare-styleable>
</resources>