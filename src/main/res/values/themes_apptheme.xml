<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/primary_light</item>

        <item name="android:windowBackground">@color/default_fragment_background</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:titleTextStyle">@style/AppActionBarText</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="AppActionBarText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TransparentNavBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.TransparentNavBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/TransparentNavBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.TransparentNavBar.ArtistDetails">

    </style>

    <style name="AppTheme.TransparentNavBar.AlbumDetails">

    </style>

</resources>