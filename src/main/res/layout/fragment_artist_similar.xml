<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:background="@drawable/shadow" />

    <ProgressBar
        android:id="@+id/pbSimilarArtists"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <org.omnirom.music.app.ui.ExpandableHeightGridView
        android:id="@+id/gvSimilarArtists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/default_fragment_background"
        android:horizontalSpacing="4dp"
        android:numColumns="@integer/main_grids_column_count"
        android:padding="4dp"
        android:verticalSpacing="4dp" />
</LinearLayout>