<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="org.omnirom.music.app.fragments.PlaylistViewFragment">


    <RelativeLayout
        android:id="@+id/frameLayout"
        android:layout_width="fill_parent"
        android:layout_height="76dp">

        <TextView
            android:id="@+id/tvNumTracks"
            style="@style/RobotoCondensedCapsSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvPlaylistName"
            android:layout_below="@+id/tvPlaylistName"
            android:layout_gravity="left|bottom"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_detail" />

        <TextView
            android:id="@+id/tvPlaylistName"
            style="@style/RobotoLightLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|top"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/frameLayout2"
            android:ellipsize="marquee"
            android:enabled="true"
            android:focusable="true"
            android:longClickable="false"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/card_background_action"
            android:clickable="true"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/btnPlay"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="right|center_vertical"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:contentDescription="@string/play_now"
                android:src="@drawable/ic_action_play" />
        </FrameLayout>
    </RelativeLayout>

    <org.omnirom.music.app.ui.PlaylistListView
        android:id="@+id/lvPlaylistContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/playing_bar_height" />
</RelativeLayout>