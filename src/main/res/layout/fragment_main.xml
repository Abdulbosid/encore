<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/default_fragment_background"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="org.omnirom.music.app.MainActivity$PlaceholderFragment">

        <!-- Large card test -->
        <TextView
            android:id="@+id/textView8"
            style="@style/RobotoCondensedItalicLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:text="@string/here_are_suggestions"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_detail" />

        <RelativeLayout
            android:id="@+id/test_large_card"
            style="@style/OmniMusic.LargeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:adjustViewBounds="true"
                android:src="@drawable/test_cover_imagine_dragons" />

            <TextView
                android:id="@+id/textView"
                style="@style/OmniMusic.LargeCard.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/ivCover"
                android:text="Night Visions" />

            <TextView
                android:id="@+id/textView2"
                style="@style/OmniMusic.LargeCard.SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:text="Imagine Dragons" />

            <TextView
                android:id="@+id/textView3"
                style="@style/OmniMusic.LargeCard.SubTitle.Emphasize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/textView2"
                android:text="2012"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView4"
                style="@style/OmniMusic.LargeCard.Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="16dp"
                android:text="Last played 3 months ago"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView5"
                style="@style/OmniMusic.Separator.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/ivCover" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="@string/play_now"
                android:textAlignment="center"
                android:includeFontPadding="false"
                style="@style/OmniMusic.LargeCard.Action"
                android:layout_gravity="center_horizontal"
                android:layout_alignBottom="@+id/ivCover"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textView5"
                android:drawableStart="@drawable/ic_action_play"
                android:gravity="center_vertical|left" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/test_large_card"
            android:layout_marginTop="8dp"
            android:baselineAligned="false"
            android:gravity="top"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/small_card_1"
                style="@style/OmniMusic.Card"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:clickable="true"
                android:measureWithLargestChild="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:src="@drawable/test_cover_rhcp" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/OmniMusic.SmallCard.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Red Hot Chili Peppers"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/small_card_2"
                style="@style/OmniMusic.Card"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:src="@drawable/test_cover_incubus" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/OmniMusic.SmallCard.Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Incubus"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            style="@style/RobotoCondensedItalicLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="16dp"
            android:text="@string/recently_listened_to"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_detail" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="8dp"
            android:baselineAligned="false"
            android:gravity="top"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout3"
                style="@style/OmniMusic.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/test_large_card"
                android:layout_gravity="top"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:clickable="true"
                android:measureWithLargestChild="false"
                android:orientation="vertical"
                android:weightSum="1"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/test_cover_within_temptation" />

                <TextView
                    android:id="@+id/textView12"
                    style="@style/OmniMusic.MediumCard.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:text="Let Us Burn"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView13"
                    style="@style/OmniMusic.MediumCard.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:text="Within Temptation"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                style="@style/OmniMusic.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:clickable="true"
                android:measureWithLargestChild="false"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/test_cover_ptx" />

                <TextView
                    android:id="@+id/textView11"
                    style="@style/OmniMusic.MediumCard.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="Daft Punk"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView10"
                    style="@style/OmniMusic.MediumCard.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:text="Pentatonix"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>