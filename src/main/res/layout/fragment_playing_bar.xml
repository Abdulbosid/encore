<?xml version="1.0" encoding="utf-8"?>

<org.omnirom.music.app.ui.PlayingBarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playingBarLayout"
    android:clickable="true">


    <RelativeLayout
        android:layout_below="@+id/ivShadow"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:autoText="false"
        android:background="@drawable/playing_bar_background"
        android:layout_alignBottom="@+id/ivPlayingBarBackground"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/playing_bar_height">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ivAlbumArt"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            android:src="@drawable/test_cover_incubus"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/playing_bar_height"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivAlbumArt"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvTitle"
                android:text="The Walker"
                android:layout_toRightOf="@+id/ivAlbumArt"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvArtist"
                android:text="Fits &amp; The Tantrums"
                android:layout_toEndOf="@+id/tvTitle"
                android:layout_alignTop="@+id/tvTitle"
                android:layout_alignParentEnd="true"
                android:alpha="0.7" />


        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/fabPlayBarButton"
        android:layout_width="@dimen/floating_button_small_size"
        android:layout_height="@dimen/floating_button_small_size"

        android:layout_above="@+id/tvArtist"
        android:layout_alignParentEnd="true"

        android:layout_marginRight="16dp"

        android:background="@drawable/fab_background"
        android:elevation="@dimen/small_button_elevation"
        android:src="@drawable/ic_action_play_pressed"
        android:stateListAnimator="@anim/small_button_raise" />
</org.omnirom.music.app.ui.PlayingBarView>