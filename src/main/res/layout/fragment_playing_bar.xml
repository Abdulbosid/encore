<?xml version="1.0" encoding="utf-8"?>

<org.omnirom.music.app.ui.PlayingBarView
    android:id="@+id/playingBarLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <LinearLayout
        android:id="@+id/playBarTracksLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:elevation="12dp"
        android:background="@color/white"
        android:orientation="vertical">

    </LinearLayout>

    <mbanje.kurt.fabbutton.FabButton
        android:id="@+id/fabPlayBarButton"

        android:layout_width="@dimen/playbar_button_size"
        android:layout_height="@dimen/playbar_button_size"

        android:layout_above="@+id/tvArtist"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        android:color="@color/primary"
        android:visibility="visible"
        android:indeterminate="false"
        android:max="100"
        android:elevation="12dp"
        app:fbb_autoStart="true"
        app:fbb_progressColor="@color/primary_dark"
        app:fbb_showEndBitmap="false"
        app:fbb_hideProgressOnComplete="false"
        />
</org.omnirom.music.app.ui.PlayingBarView>