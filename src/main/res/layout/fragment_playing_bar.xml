<?xml version="1.0" encoding="utf-8"?>

<org.omnirom.music.app.ui.PlayingBarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playingBarLayout"
    android:clickable="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/playBarTracksLayout"
        android:background="@drawable/playing_bar_background">

    </LinearLayout>

    <ImageButton
        android:id="@+id/fabPlayBarButton"
        android:layout_width="@dimen/floating_button_small_size"
        android:layout_height="@dimen/floating_button_small_size"

        android:layout_above="@+id/tvArtist"
        android:layout_alignParentEnd="true"

        android:layout_marginRight="16dp"

        android:background="@drawable/fab_background"
        android:elevation="@dimen/small_button_elevation"
        android:stateListAnimator="@anim/small_button_raise" />
</org.omnirom.music.app.ui.PlayingBarView>