<org.omnirom.music.app.ui.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="org.omnirom.music.app.ArtistActivity.InnerFragment">

        <!-- android:viewName="itemImage" -->
        <ImageView
            android:id="@+id/ivHero"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/title_activity_artist"
            android:scaleType="centerCrop" />

        <!-- android:viewName="artistName" -->
        <TextView
            android:id="@+id/tvArtist"
            style="@style/FontHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ivHero"
            android:layout_alignLeft="@+id/ivHero"
            android:layout_alignRight="@+id/ivHero"
            android:layout_alignStart="@+id/ivHero"
            android:layout_below="@+id/ivHero"
            android:background="#333"
            android:gravity="center_vertical|start"
            android:paddingBottom="16dp"
            android:paddingEnd="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="8dp"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:textColor="@color/white" />

        <!-- android:elevation="@dimen/button_elevation"
            android:stateListAnimator="@anim/button_raise" -->
        <ImageButton
            android:id="@+id/fabPlay"
            android:layout_width="@dimen/floating_button_large_size"
            android:layout_height="@dimen/floating_button_large_size"

            android:layout_above="@+id/tvArtist"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_marginBottom="-24dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"

            android:background="@drawable/fab_background"
            android:contentDescription="@string/play_now" />

        <ImageView
            android:id="@+id/ivSourceLogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/tvArtist"
            android:layout_alignEnd="@+id/tvArtist"
            android:layout_alignRight="@+id/tvArtist"
            android:layout_alignTop="@+id/tvArtist"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside" />

        <org.omnirom.music.app.ui.WrapContentHeightViewPager
            android:id="@+id/pagerArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvArtist">

            <android.support.v4.view.PagerTabStrip
                android:id="@+id/pagerArtistStrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#33b5e5"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="#fff" />

        </org.omnirom.music.app.ui.WrapContentHeightViewPager>

    </RelativeLayout>
</org.omnirom.music.app.ui.ParallaxScrollView>