<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.omnirom.music.app.ArtistActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/ivHero"
        android:viewName="itemImage"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="true"
        android:src="@drawable/test_cover_ptx"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvArtist"
        android:layout_below="@+id/ivHero"
        android:layout_alignStart="@+id/ivHero"
        android:layout_alignEnd="@+id/ivHero"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical|start"
        android:textColor="@color/white"
        android:background="#333"
        android:viewName="artistName" />


</RelativeLayout>
