<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="org.omnirom.music.app.ArtistActivity.InnerFragment">

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ivHero"
            android:layout_alignStart="@+id/ivHero"
            android:layout_below="@+id/ivHero"
            android:background="#333"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|start"
            android:paddingBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:viewName="artistName" />

        <ImageView
            android:id="@+id/ivHero"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:viewName="itemImage" />

        <ImageButton
            android:id="@+id/fabPlay"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"

            android:layout_above="@+id/tvArtist"
            android:layout_alignParentEnd="true"

            android:layout_marginBottom="-24dp"
            android:layout_marginRight="48dp"

            android:background="@drawable/fab_background"
            android:elevation="@dimen/button_elevation"
            android:src="@drawable/ic_action_play_pressed"
            android:stateListAnimator="@anim/button_raise" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvArtist"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/tvArtistSuggestionNote"
                android:text="Recommended for you"
                android:textAllCaps="true"
                android:layout_marginBottom="8dp" />


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:id="@+id/cardArtistSuggestion"
                android:elevation="@dimen/card_elevation"
                card_view:cardCornerRadius="@dimen/cardview_default_radius">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <org.omnirom.music.app.ui.SquareImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ivArtistSuggestionCover"
                        android:adjustViewBounds="true"
                        android:layout_alignParentStart="true"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ivArtistSuggestionCover"
                        android:textSize="22sp"
                        android:id="@+id/tvArtistSuggestionTitle"
                        android:layout_margin="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ivArtistSuggestionCover"
                        android:layout_below="@id/tvArtistSuggestionTitle"
                        android:textSize="18sp"
                        android:id="@+id/tvArtistSuggestionArtist"
                        android:alpha="0.6"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_alignParentEnd="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignEnd="@+id/tvArtistSuggestionTitle"
                        android:layout_marginBottom="4dp"
                        android:layout_marginRight="4dp"
                        android:id="@+id/btnArtistSuggestionPlay"
                        android:text="@string/play_now"
                        style="@android:style/Widget.Material.Button.Borderless.Small" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Albums"
                android:textSize="16sp"
                android:id="@+id/textView"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textAllCaps="true" />

            <LinearLayout
                android:id="@+id/llAlbums"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>