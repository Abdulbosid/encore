<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_item_height"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/navdrawer_divider"
        android:background="@color/separator"
        />
    <TextView
        android:id="@android:id/text1"
        style="@style/OmniMusic.NavDrawerAction"
        android:paddingLeft="@dimen/nav_drawer_item_padding"
        android:paddingRight="@dimen/nav_drawer_item_padding"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        android:gravity="center_vertical"/>
</LinearLayout>