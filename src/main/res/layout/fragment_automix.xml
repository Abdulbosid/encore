<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="org.omnirom.music.app.AutomixActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/ivPoweredEchoNest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lvBuckets"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/lvBuckets"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:contentDescription="@string/automix"
        android:scaleType="fitCenter"
        android:src="@drawable/powered_by_echonest"/>

    <ListView
        android:id="@+id/lvBuckets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPoweredEchoNest"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/automix_no_buckets"
        android:id="@+id/txtNoBucket"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="italic"
        android:padding="@dimen/activity_horizontal_margin"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fabCreateMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"

        app:fab_addButtonColorNormal="@color/primary"
        app:fab_addButtonColorPressed="@color/primary_dark"
        app:fab_addButtonPlusIconColor="@color/white">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCreateDynamic"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/grey"
            app:fab_icon="@drawable/ic_dynamic_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCreateStatic"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/grey"
            app:fab_icon="@drawable/ic_static_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
