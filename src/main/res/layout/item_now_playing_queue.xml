<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OmniMusic.LargeCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/playlist_view_item_height"
    android:layout_margin="16dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/test_cover_within_temptation" />

    <TextView
        android:id="@+id/textView4"
        style="@style/OmniMusic.MediumCard.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/imageView5"
        android:singleLine="true"
        android:text="The Whole World is Watching" />

    <TextView
        android:id="@+id/textView5"
        style="@style/OmniMusic.MediumCard.SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:paddingBottom="4dp"
        android:singleLine="true"
        android:text="Within Temptation" />

    <TextView
        android:id="@+id/textView6"
        style="@style/OmniMusic.LargeCard.Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:singleLine="true"
        android:text="Hydra (2014)" />
</RelativeLayout>