<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04:12"
        android:id="@+id/tvTrackDuration"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="72dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:alpha="0.6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Daft Punk Medley"
        android:id="@+id/tvTrackName"
        android:layout_alignTop="@+id/tvTrackDuration"
        android:layout_toRightOf="@+id/tvTrackDuration"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/ivOverflow" />

    <org.omnirom.music.app.ui.SquareImageView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivOverflow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_more_vert_dark"
        android:layout_alignParentTop="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:scaleType="center" />

</RelativeLayout>