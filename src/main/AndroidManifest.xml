<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.omnirom.music.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".OmniMusic"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >

        <!-- GMS for Chromecast -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Search info -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchActivity" />

        <!-- Playback Service -->
        <service
            android:name="org.omnirom.music.service.PlaybackService"
            android:enabled="true"
            android:exported="false" />

        <!-- Notification Intent Service -->
        <service
            android:name="org.omnirom.music.service.NotifActionService"
            android:exported="false" />

        <!-- Receiver for the media buttons -->
        <receiver android:name="org.omnirom.music.service.RemoteControlReceiver">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <!-- Receiver for package installed/uninstalled -->
        <receiver android:name="org.omnirom.music.providers.PacManReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_INSTALL" />
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_CHANGED" />
                <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.MUSIC_PLAYER" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.APP_MUSIC" />
            </intent-filter>
        </activity>

        <!-- Search Activity -->
        <activity
            android:name=".SearchActivity"
            android:label="@string/search_hint"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!-- Artist Activity -->
        <activity
            android:name=".ArtistActivity"
            android:icon="@drawable/ic_launcher_white"
            android:label="@string/title_activity_artist"
            android:theme="@style/AppTheme.TransparentNavBar.ArtistDetails"
            android:launchMode="singleTask">
        </activity>

        <!-- Playlist Activity -->
        <activity
            android:name=".PlaylistActivity"
            android:icon="@drawable/ic_launcher_white"
            android:label="@string/title_activity_artist"
            android:theme="@style/AppTheme.TransparentNavBar.ArtistDetails"
            android:launchMode="singleTask">
        </activity>

        <!-- Album Activity -->
        <activity
            android:name=".AlbumActivity"
            android:icon="@drawable/ic_launcher_white"
            android:label="@string/title_activity_artist"
            android:theme="@style/AppTheme.TransparentNavBar.AlbumDetails"
            android:launchMode="singleTask">
        </activity>

        <!-- Now Playing Activity -->
        <activity
            android:name=".PlaybackQueueActivity"
            android:icon="@drawable/ic_launcher_white"
            android:label="@string/title_activity_playback_queue"
            android:launchMode="singleTask">
        </activity>

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:icon="@drawable/ic_launcher_white"
            android:label="@string/title_activity_settings"
            android:launchMode="singleTask">
        </activity>

        <!-- Automix Creation Activity -->
        <activity
            android:name=".AutomixCreateActivity"
            android:label="@string/title_activity_automix_create"
            android:launchMode="singleTask">
        </activity>

        <!-- ACRA Crash Reporting -->
        <activity android:name="org.acra.CrashReportDialog"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true" />


    </application>

</manifest>
